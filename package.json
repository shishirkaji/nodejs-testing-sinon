{
  "name": "stubbing_nodejs_functions",
  "version": "1.0.0",
  "description": "This is a code base for an article on medium showing how to properly stub functions in nodejs applications using sinon.",
  "main": "index.js",
  "scripts": {
    "start": "node ./dist-server/app",
    "dev": " npm run  build && npm run start ",
    "build": "npm run clean && npm run transpile",
    "transpile": "babel ./server --out-dir dist-server",
    "clean": "rimraf dist-server",
    "test": "mocha",
    "watch:dev": "nodemon"
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "server/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "keywords": [
    "sinon",
    "nodejs",
    "stub",
    "tutorial"
  ],
  "author": "shishirkshrestha",
  "license": "ISC",
  "dependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "axios": "^0.21.1",
    "express": "^4.17.1",
    "nodemon": "^2.0.7",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "mocha": "^8.2.1",
    "sinon": "^9.2.4"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  }
}
